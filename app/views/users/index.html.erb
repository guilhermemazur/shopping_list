<h1>
  Listing Users
  <%= link_to new_user_path, class: "btn btn-success" do %>
    <i class="fa fa-plus"></i> New User
  <% end %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td class="btn-table">
          <%= link_to user, class: "btn btn-info btn-sm" do %>
            <i class="fa fa-info"></i>
          <% end %>
          <%= link_to edit_user_path(user), class: "btn btn-primary btn-sm" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
