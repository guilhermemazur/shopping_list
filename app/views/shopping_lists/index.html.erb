<p id="notice"><%= notice %></p>

<h1>Listing Shopping Lists</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Is purchased</th>
      <th>User</th>
      <th>Total Products</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_lists.each do |shopping_list| %>
      <tr>
        <td><%= shopping_list.date %></td>
        <td><%= shopping_list.is_purchased %></td>
        <td><%= shopping_list.user.name %></td>
        <td><%= shopping_list.products.count %></td>
        <td><%= link_to 'Show', shopping_list %></td>
        <td><%= link_to 'Edit', edit_shopping_list_path(shopping_list) %></td>
        <td><%= link_to 'Destroy', shopping_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

